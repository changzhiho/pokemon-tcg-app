@* 
    Navigation menu component that appears in the sidebar.
    Provides links to the main pages of the application.
*@

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Pokemon TCG App</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Search
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="favorites">
                <span class="oi oi-star" aria-hidden="true"></span> My Favorites
            </NavLink>
        </div>
    </nav>
</div>

@code {
    // Controls the collapse state of the navigation menu on mobile
    private bool collapseNavMenu = true;

    // CSS class for the navigation menu based on collapse state
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    // Toggle the navigation menu collapse state
    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

